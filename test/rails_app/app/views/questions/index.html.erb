<section id="questions">
  <!--h1><%= t('sechat.questions.index.heading') %></h1-->
  
  <p class="new_question">
    <%= link_to t('sechat.questions.index.new_question'), new_question_path %>
  </p>
  
  <% @questions.each do |question| %>
    <article class="question">
      <h2><%= link_to question.subject, question_path(question) %></h2>
      <p class="infos">
        <% if question.replies_count == 0 %>
          <%= t('sechat.questions.index.asked',
            :date => l(question.created_at, :format => :long)) %>
        <% else %>
          <%= t('sechat.questions.index.replied',
            :count => question.replies_count,
            :date  => l(question.replies.last.created_at, :format => :long)) %>
        <% end %>
      </p>
    </article>
  <% end %>
</section>
