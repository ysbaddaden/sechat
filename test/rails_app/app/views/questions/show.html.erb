<section id="question">
  <article class="question">
    <h1><%= @question.subject %></h1>
    
    <div class="body">
      <%= simple_format @question.body %>
    </div>
    
    <p>
      <%= t('sechat.questions.show.asked', :date => l(@question.created_at, :format => :long)) %>
    </p>
  </article>
  
  <section id="answers">
    <%= render :partial => 'answers/answer', :collection => @question.answers %>
    <%= render 'answers/form' %>
  </section>
</section>
